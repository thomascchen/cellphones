<%= form_for @phone do |f| %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.label :battery_life, "Battery Life" %>
  <%= f.text_field :battery_life %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :phone_manufacturer_id, "Phone Manufacturer" %>
  <%= f.select :phone_manufacturer_id, PhoneManufacturer.all.map {|a| [a.name, a.id]} %>

  <%= f.submit "Submit" %>
<% end %>
